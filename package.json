{
  "name": "gridcoin-rpc",
  "version": "2.0.0",
  "description": "",
  "keywords": [
    "gridcoin",
    "jsonrpc",
    "cryptocurrency",
    "crypto",
    "cryptocoin",
    "api"
  ],
  "module": "dist/GridcoinRPC.js",
  "main": "dist/GridcoinRPC.js",
  "typings": "dist/types/GridcoinRPC.d.ts",
  "files": [
    "dist"
  ],
  "author": "Gridcat <gridcat@protonmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/gridcat/gridcoin-rpc.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "_build": "tsc --module commonjs && rollup -c rollup.config.ts && npm run build:docs",
    "build": "tsc && npm run build:docs",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "build:docs": "ts-node --project tools/tsconfig.json tools/generate-doc.ts",
    "deploy:docs": "ts-node --project tools/tsconfig.json tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare"
  },
  "lint-staged": {
    "{src,test,tools}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^7.1.2",
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.5",
    "@semantic-release/github": "^5.2.6",
    "@semantic-release/npm": "^5.1.13",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@types/chai": "^4.1.7",
    "@types/jest": "^23.3.2",
    "@types/nock": "^9.3.0",
    "@types/node": "^10.11.0",
    "@types/rimraf": "^2.0.2",
    "chai": "^4.2.0",
    "colors": "^1.3.2",
    "commitizen": "^4.0.4",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.0.1",
    "jest": "^25.0.0",
    "jest-config": "^25.0.0",
    "lint-staged": "^7.3.0",
    "lodash.camelcase": "^4.3.0",
    "nock": "^10.0.4",
    "prettier": "^1.14.3",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.2",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.21.2",
    "semantic-release": "^15.13.24",
    "ts-jest": "^23.10.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {}
}
